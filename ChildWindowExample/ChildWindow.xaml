<Window x:Class="ChildWindowExample.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChildWindowExample"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ChildWindow" Height="144" Width="350">
    <StackPanel Margin="5">
        <Label Margin="5" HorizontalAlignment="Center" Content="메시지를 입력하세요." />
        <TextBox Margin="5" Text="{Binding Message, Mode=TwoWay}" />
        <Button Margin="5" HorizontalAlignment="Center" Padding="15,3" Content="확인" IsDefault="True" Click="Button_Click" />
    </StackPanel>
</Window>
